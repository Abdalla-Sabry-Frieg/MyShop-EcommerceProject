@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Mangment";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_Dashbord.cshtml";
}


@* <partial name="/Views/Shared/_Toster.cshtml"/> will set toster at all CRUD at dashboard body*@

<div>
    <a class="btn btn-primary" asp-action="create">create</a>
</div>
<hr />
<table class="table table-hover"> 
    <thead class="text-bold">
        <tr class="text-center"> 
           <td>image</td>
           <td>Name</td>
           <td>Description</td>
           <td>Time Created</td>
           <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td><img src="~/Images/Category/@item.Image" style="height:35px ; width:35px; " /></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a class="btn btn-success" asp-route-id="@item.Id" asp-action="Edit" asp-asp-controller="Category">Edit</a>
                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete" asp-asp-controller="Category">Delete</a>
                   
                </td>
            </tr>
        }
      
    </tbody>

</table>


