@model Category
@{
    ViewBag.PageTitle = "Category Mangment";
    ViewBag.CardTitle = "Delete Category";
    Layout = "~/Views/Shared/_Dashbord.cshtml";
}



<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="DeleteCategory" method="post">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Image"  class="form-label"></label>
                <input type="file" disabled asp-for="Image" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" disabled asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <input type="text" disabled asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 pb-1">
                <input type="submit" class="btn btn-danger" value="Delete" />
            </div>
        </form>

    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to list</a>
</div>

@section Scripts {
    <partial src="Views/_ValidationScriptsPartial"></partial>
}

